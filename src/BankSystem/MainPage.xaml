<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BankSystem.MainPage"
             Title="Банковская система">

    <Grid Padding="30" RowSpacing="25" ColumnSpacing="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Button Text="Управление Банками"
                BackgroundColor="#FF9800"
                TextColor="White"
                Clicked="OnRedactBanksClicked"
                HorizontalOptions="End"
                VerticalOptions="Start"
                Grid.Row="0" />

        <VerticalStackLayout Grid.Row="1" Spacing="25">
            <Label 
                Text="Добро пожаловать в банковскую систему управления и пользования банками." 
                FontSize="24" 
                HorizontalOptions="Center"
                HorizontalTextAlignment="Center" />

            <Label 
                Text="Выберите банк:" 
                FontSize="18" 
                HorizontalOptions="Center" />

            <Picker x:Name="bankPicker" Title="Выберите банк"/>

            <HorizontalStackLayout Spacing="20" HorizontalOptions="Center">
                <Button Text="Зарегистрироваться"
                        BackgroundColor="#4CAF50"
                        TextColor="White"
                        Clicked="OnRegisterClicked" />

                <Button Text="Войти"
                        BackgroundColor="#007AFF"
                        TextColor="White"
                        Clicked="OnLoginClicked" />
            </HorizontalStackLayout>

            <Label x:Name="statusLabel"
                   TextColor="Red"
                   FontSize="14"
                   HorizontalOptions="Center" />
        </VerticalStackLayout>
    </Grid>

</ContentPage>