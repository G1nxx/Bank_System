<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BankSystem.Pages.BankDetailsPage"
             Title="BankDetailsPage">

    <ScrollView Padding="30">
        <VerticalStackLayout Spacing="10">
            <Label Text="{Binding LegalName}"
                       FontSize="24"
                       FontAttributes="Bold"
                       HorizontalOptions="Center" />

            <Label Text="{Binding Type, StringFormat='Тип: {0}'}"
                       FontSize="18" />

            <Label Text="{Binding LegalAddress, StringFormat='Адрес: {0}'}"
                       FontSize="18" />

            <Label Text="{Binding TRN, StringFormat='TRN: {0}'}"
                       FontSize="18" />

            <Label Text="{Binding BIK, StringFormat='BIK: {0}'}"
                       FontSize="18" />

            <Label Text="{Binding CreditIds, StringFormat='ID кредитов: {0}'}"
                       FontSize="18" />

            <Label Text="{Binding ClientIds, StringFormat='ID клиентов: {0}'}"
                       FontSize="18" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>