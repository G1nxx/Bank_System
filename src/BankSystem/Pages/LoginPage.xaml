<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BankSystem.Pages.LoginPage"
             Title="LoginPage">
    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20">

            <Label Text="Вход" FontSize="32" HorizontalOptions="Center" />

            <Entry x:Name="usernameEntry" Placeholder="Имя пользователя" />

            <Entry x:Name="passwordEntry" Placeholder="Пароль" IsPassword="True" />

            <Button Text="Войти"
                    BackgroundColor="#007AFF"
                    TextColor="White"
                    Clicked="OnLoginClicked" />

            <Label x:Name="statusLabel" TextColor="Red" FontSize="14" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>