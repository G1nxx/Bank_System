<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BankSystem.Pages.ManagerPages.ManagerProfilePage"
             Title="ManageProfilePage">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="Панель менеджера" FontSize="24" HorizontalOptions="Center" />

            <Button Text="Запросы на создание счета"
                    BackgroundColor="#007AFF"
                    TextColor="White"
                    Clicked="OnAccountRequestsClicked" />

            <Button Text="Транзакции"
                    BackgroundColor="#007AFF"
                    TextColor="White"
                    Clicked="OnTransactionsClicked" />

            <Button Text="Счета"
                    BackgroundColor="#007AFF"
                    TextColor="White"
                    Clicked="OnAccountsClicked" />

            <Button Text="Пользователи"
                    BackgroundColor="#007AFF"
                    TextColor="White"
                    Clicked="OnUsersClicked" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>