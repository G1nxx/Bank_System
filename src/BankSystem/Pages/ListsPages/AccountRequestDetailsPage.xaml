<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BankSystem.Pages.ListsPages.AccountRequestDetailsPage"
             Title="AccountRequestDetailsPage">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="Подробная информация о запросе" FontSize="24" HorizontalOptions="Center" />

            <Label Text="Информация о запросе:" FontSize="20" FontAttributes="Bold" />
            <Label x:Name="requestAccountNameLabel" FontSize="16" />
            <Label x:Name="requestCurrencyLabel" FontSize="16" />
            <Label x:Name="requestStatusLabel" FontSize="16" />
            <Label x:Name="requestCreatedAtLabel" FontSize="16" />

            <BoxView HeightRequest="1" Color="Gray" Margin="0,10" />

            <Label Text="Информация о банке:" FontSize="20" FontAttributes="Bold" />
            <Label x:Name="bankTypeLabel" FontSize="16" />
            <Label x:Name="bankLegalNameLabel" FontSize="16" />
            <Label x:Name="bankLegalAddressLabel" FontSize="16" />
            <Label x:Name="bankTRNLabel" FontSize="16" />
            <Label x:Name="bankBIKLabel" FontSize="16" />

            <BoxView HeightRequest="1" Color="Gray" Margin="0,10" />

            <Label Text="Информация о пользователе:" FontSize="20" FontAttributes="Bold" />
            <Label x:Name="userLoginLabel" FontSize="16" />
            <Label x:Name="userNameLabel" FontSize="16" />
            <Label x:Name="userRoleLabel" FontSize="16" />
            <Label x:Name="userDateOfBirthLabel" FontSize="16" />
            <Label x:Name="userEmailLabel" FontSize="16" />
            <Label x:Name="userPassportSeriesLabel" FontSize="16" />
            <Label x:Name="userPhoneNumberLabel" FontSize="16" />

            <Button x:Name="rejectButton"
                    Text="Отклонить"
                    BackgroundColor="#FF4444"
                    TextColor="White"
                    Clicked="OnRejectClicked" />

            <Button x:Name="approveButton"
                    Text="Одобрить"
                    BackgroundColor="#4CAF50"
                    TextColor="White"
                    Clicked="OnApproveClicked" />
            
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>